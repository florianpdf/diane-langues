<!-- Services -->

{% trans_default_domain 'app' %}

<section class="bg-light page-section" id="services">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">{{ 'service.title'|trans }}</h2>
				<h3 class="section-subheading text-muted">{{ 'service.description'|trans }}</h3>
			</div>
		</div>
		<div class="row text-center">
            {% for service in services %}
			<div class="col-md-4">
				<div class="services">
					<img class="mx-auto rounded-circle" src="{{ vich_uploader_asset(service, 'imageFile') }}" alt="">
					<h4 class="service-heading">{{ service.type}}</h4>
					<p class="text-muted">{{ service.description }}</p>
					<p class="text-muted">{{ service.price ~ " per world"}}</p>
				</div>
			</div>  
            {% endfor %}
		</div>
	</div>
</section>
