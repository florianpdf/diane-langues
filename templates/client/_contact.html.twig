<!-- Contact -->

{% trans_default_domain 'app' %}

<section class="page-section" id="contact">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading text-uppercase">{{ 'contact.title'|trans }}</h2>
				<h3 class="section-subheading text-muted">{{ 'contact.description'|trans }}</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form id="contactForm" name="sentMessage" novalidate="novalidate">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<input class="form-control" id="name" type="text" placeholder="{{ 'contact.form.placeholder.name'|trans }} *" required="required" data-validation-required-message={{ 'contact.form.placeholder.name'|trans }}>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" id="email" type="email" placeholder="{{ 'contact.form.placeholder.email'|trans }} *" required="required" data-validation-required-message={{ 'contact.form.placeholder.email'|trans }}>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" id="phone" type="tel" placeholder="{{ 'contact.form.placeholder.phoneNumber'|trans }} *" required="required" data-validation-required-message={{ 'contact.form.placeholder.phoneNumber'|trans }}>
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<textarea class="form-control" id="message" placeholder="{{ 'contact.form.placeholder.message'|trans }} *" required="required" data-validation-required-message={{ 'contact.form.placeholder.message'|trans }}></textarea>
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">{{ 'contact.form.sendButton'|trans }}</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
